doctype html
html
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible". content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		
		title Authentication
		link(href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', rel='stylesheet')
		link(href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css', rel='stylesheet')
		style
			body { padding-top:80px; word-wrap:break-word; }
	body
	div(class="container")
		div(class="jumbotron text-center")
			h1 <span class="fa fa-lock"></span> Authentication
			p Login or Register with:
			if (user)
				a(href = "/game/", class="btn btn-primary") 
					span(class="fa fa-gamepad" aria-hidden="true")
					|  Play Game
				|
				|
				a(href = "/profile/", class="btn btn-success")
					span(class="fa fa-user" aria-hidden="true")
					|  Profile
				|
				|
				a(href = "/logout/", class="btn btn-default")
					span(class="fa fa-sign-out" aria-hidden="true")
					|  Log out
				|
				|
			else 
				a(href = "/login/", class="btn btn-default")
					span(class="fa fa-user" aria-hidden="true")
					|  Sign In
				|
				|
				a(href = "/signup/", class="btn btn-default")
					span(class="fa fa-user" aria-hidden="true")
					|  Sign Up
				|
				|
				a(href = "/auth/google/", class="btn btn-danger")
					span(class="fa fa-google-plus" aria-hidden="true")
					|  Google